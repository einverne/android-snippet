<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.einverne.exercise100">

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SettingsActivity"
            android:label="Preference"></activity>
        <activity android:name=".Activity.WidgetSettingsActivity">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <receiver android:name=".MyAppWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="info.einverne.exercise100.ACTION_WIDGET_TEXT" />
                <action android:name="info.einverne.exercise100.ACTION_WIDGET_IMAGEBUTTON" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/my_app_widget_info" />
        </receiver>

        <service
            android:name=".UpdateWidgetService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="info.einverne.exercise100.UpdateWidgetService" />
            </intent-filter>
        </service>

        <activity android:name=".Activity.DataActivity"></activity>
        <activity android:name=".Activity.TextViewTestActivity"></activity>
    </application>

</manifest>