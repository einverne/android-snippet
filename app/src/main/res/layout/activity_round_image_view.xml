<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_round_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.einverne.exercise100.activity.RoundImageViewActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="368dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@+id/activity_round_image_view"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/roundImageView"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="@+id/activity_round_image_view"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/imageView"
        android:layout_margin="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/blur_test"
        app:riv_border_color="#333333"
        app:riv_border_width="10dp"
        app:riv_corner_radius="20dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:layout_constraintLeft_toLeftOf="@+id/activity_round_image_view"
        app:layout_constraintTop_toTopOf="@+id/activity_round_image_view"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/activity_round_image_view"
        app:layout_constraintHorizontal_bias="0.88" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintLeft_toRightOf="@+id/roundImageView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/roundImageView"
        app:layout_constraintRight_toRightOf="@+id/activity_round_image_view"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/roundImageView" />

    <TextView
        android:text="TextView"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/textView7"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageView" />

    <TextView
        android:text="TextView"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/textView8"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintRight_toLeftOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="TextView"
        android:layout_width="58dp"
        android:layout_height="16dp"
        android:id="@+id/textView9"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/textView7"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="TextView"
        android:layout_width="58dp"
        android:layout_height="16dp"
        tools:layout_editor_absoluteX="12dp"
        android:id="@+id/textView10"
        tools:layout_editor_absoluteY="216dp" />

</android.support.constraint.ConstraintLayout>
